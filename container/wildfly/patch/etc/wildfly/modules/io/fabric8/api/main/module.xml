<?xml version="1.0" encoding="UTF-8"?>

<module xmlns="urn:jboss:module:1.1" name="io.fabric8.api">

    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <resource-root path="fabric8-core-api-@project.version@.jar"/>
    </resources>

    <exports>
        <include path="io/fabric8/api"/>
    </exports>
    
    <dependencies>
        <module name="javax.api"/>
        <module name="org.jboss.gravia"/>
        <module name="org.osgi.core"/>
        <module name="org.osgi.enterprise"/>
        <module name="org.slf4j"/>
    </dependencies>

</module>
