<project default="build">

  <!-- ================================================================== -->
  <!-- Setup                                                              -->
  <!-- ================================================================== -->
  <property name="etc.dir" value="${basedir}/etc" />
  <property name="output.dir" value="${basedir}/target" />
  <property name="fabric8.wildfly.home" value="${output.dir}/distro/fabric8-wildfly-${project.version}" />

  <!-- ================================================================== -->
  <!-- Initialization                                                     -->
  <!-- ================================================================== -->
  <target name="init">
  </target>

  <!-- ================================================================== -->
  <!-- Distribution                                                       -->
  <!-- ================================================================== -->
  <target name="build" depends="init">

  	<!-- Build the wildfly distro -->
  	<mkdir dir="${output.dir}/distro"/>
  	<move file="${output.dir}/wildfly-${version.jboss.wildfly}" tofile="${fabric8.wildfly.home}"/>
  	<tar destfile="${output.dir}/fabric8-wildfly-${project.version}.tar.gz" compression="gzip">
		<tarfileset dir="${output.dir}/distro" includes="fabric8-wildfly-${project.version}/bin/*.sh" filemode="755"/>
		<tarfileset dir="${output.dir}/distro" excludes="fabric8-wildfly-${project.version}/bin/*.sh"/>
	</tar>
  	
  </target>
</project>
